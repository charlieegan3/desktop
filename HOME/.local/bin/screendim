#!/usr/bin/env bash

# always kill running instances
pkill -f gammastep

echo "<cr> turns off, options: on, or value e.g. 1500"
read input

# if off, exit early
if [[ "$input" == "off" ]]; then
  pkill -f gammastep
  exit
fi

# if on, use default
if [[ "$input" == "on" ]]; then
  eval "gammastep -O 2000" &>/dev/null & disown
fi

# if other, use as gammastep value
if [[ ! "$input" == "" ]]; then
  eval "gammastep -O $input" &>/dev/null & disown
fi
